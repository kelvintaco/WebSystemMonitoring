@page "/settings"

<div class="@($"fixed inset-0 flex items-center justify-center z-50 {(selectedTheme == "dark" ? "bg-black" : "bg-white")}")">
    <div class="@($"rounded-lg p-6 w-96 shadow-xl {(selectedTheme == "dark" ? "bg-gray-800 text-white" : "bg-white text-gray-800")}")">
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-xl font-semibold">Theme Settings</h2>
        </div>
        <div class="space-y-4">
            <div class="flex flex-col space-y-3">
                <div class="flex items-center space-x-3">
                    <input type="radio" id="lightMode" name="theme" value="light"
                           checked="@(selectedTheme == "light")"
                           @onchange="OnThemeChanged"
                           class="w-4 h-4 text-blue-600">
                    <label for="lightMode" class="text-gray-700">Light Mode</label>
                </div>
                <div class="flex items-center space-x-3">
                    <input type="radio" id="darkMode" name="theme" value="dark"
                           checked="@(selectedTheme == "dark")"
                           @onchange="OnThemeChanged"
                           class="w-4 h-4 text-blue-600">
                    <label for="darkMode" class="text-gray-300">Dark Mode</label>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private string selectedTheme = "light";

    private void OnThemeChanged(ChangeEventArgs e)
    {
        selectedTheme = e.Value?.ToString() ?? "light";
    }
}