@using Blazored.Modal
@using Blazored.Modal.Services

<div class="sblazored-modal-container">
    <div class="sblazored-modal-header">
        <h3>@Title</h3>
    </div>
    <div class="sblazored-modal-content">
        <p>@Message</p>
        <button @onclick="Close">View Preview</button>
    </div>
</div>

@code {
    [CascadingParameter] BlazoredModalInstance ModalInstance { get; set; }
    [Parameter] public string Title { get; set; } = "Success!";
    [Parameter] public string Message { get; set; } = "Your PAR form has been successfully submitted.";

    private async Task Close()
    {
        await ModalInstance.CloseAsync();
    }
}