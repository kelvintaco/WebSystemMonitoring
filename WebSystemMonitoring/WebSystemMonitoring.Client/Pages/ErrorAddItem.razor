@using Blazored.Modal
@using Blazored.Modal.Services

<div class="text-center p-4">
    <h4 class="text-danger mb-4">Error</h4>
    <p>There was an error processing your request. Please check all fields and try again.</p>
    <button class="btn btn-primary mt-3" @onclick="CloseModal">OK</button>
</div>

@code {
    [CascadingParameter] BlazoredModalInstance BlazoredModal { get; set; }

    private void CloseModal()
    {
        BlazoredModal.CloseAsync(ModalResult.Ok(true));
    }
} 