@page "/"

<PageTitle>Home</PageTitle>

<div class="min-h-screen w-screen bg-cover bg-center bg-fixed bg-no-repeat relative overflow-hidden"
     style="background-image: linear-gradient(rgba(18, 42, 255, 0.85), rgba(134, 136, 243, 0.85)), url('/townhall.jpg')">
    
    <!-- Animated background particles -->
    <div class="absolute inset-0 overflow-hidden">
        @for (int i = 0; i < 20; i++)
        {
            <div class="particle-@i absolute rounded-full bg-white opacity-20"
                 style="@GetRandomParticleStyle()"></div>
        }
    </div>
    
    <div class="container mx-auto px-4 py-16 flex flex-col items-center justify-center min-h-screen relative z-10">
        <!-- Logo or icon could go here -->
        <div class="mb-6 text-white text-6xl animate-fade-in-down">
            <i class="fas fa-desktop"></i>
        </div>
        
        <h1 class="text-5xl md:text-6xl font-medium mb-4 text-white tracking-wide text-center animate-fade-in-down">
            WELCOME
        </h1>
        
        <p class="text-xl text-blue-100 mb-12 text-center max-w-2xl animate-fade-in-down" style="animation-delay: 0.2s">
            Supply Monitoring System Dashboard
        </p>
        
        <div class="custom-dashboard-grid w-full max-w-7xl animate-fade-in-up">
            <NavLink href="MasterList" class="btn-card group">
                <div class="icon-wrapper animate-float">
                    <i class="fas fa-list-ul text-3xl group-hover:text-blue-100 transition-colors duration-300"></i>
                </div>
                <span class="text-lg font-medium">Master List</span>
                <span class="text-sm text-gray-300 mt-2">View complete records</span>
            </NavLink>
            <NavLink href="addform" class="btn-card group">
                <div class="icon-wrapper animate-float" style="animation-delay: 0.2s">
                    <i class="fas fa-box text-3xl group-hover:text-blue-100 transition-colors duration-300"></i>
                </div>
                <span class="text-lg font-medium">PAR</span>
                <span class="text-sm text-gray-300 mt-2">Property Acknowledgement Receipt</span>
            </NavLink>
            <NavLink href="ics" class="btn-card group">
                <div class="icon-wrapper animate-float" style="animation-delay: 0.4s">
                    <i class="fas fa-archive text-3xl group-hover:text-blue-100 transition-colors duration-300"></i>
                </div>
                <span class="text-lg font-medium">ICS</span>
                <span class="text-sm text-gray-300 mt-2">Inventory Custodian Slip</span>
            </NavLink>
            <NavLink href="surrender" class="btn-card group">
                <div class="icon-wrapper animate-float" style="animation-delay: 0.6s">
                    <i class="fas fa-print text-3xl group-hover:text-blue-100 transition-colors duration-300"></i>
                </div>
                <span class="text-lg font-medium">Surrender</span>
                <span class="text-sm text-gray-300 mt-2">Surrender Form</span>
            </NavLink>
            <NavLink href="transfer" class="btn-card group">
                <div class="icon-wrapper animate-float" style="animation-delay: 0.6s">
                    <i class="fas fa-print text-3xl group-hover:text-blue-100 transition-colors duration-300"></i>
                </div>
                <span class="text-lg font-medium">Transfer</span>
                <span class="text-sm text-gray-300 mt-2">Property Transfer Report</span>
            </NavLink>
        </div>
        
        <div class="mt-12 text-blue-100 text-sm animate-fade-in-up" style="animation-delay: 0.8s">
            <p>© 2025 Supply Monitoring System. All rights reserved.</p>
        </div>
    </div>
</div>

<style>
    /* Animations */
    @@keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(-20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    @@keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
        100% { transform: translateY(0px); }
    }
    
    @@keyframes particleAnimation {
        0% {
            transform: translateY(0) translateX(0);
            opacity: 0;
        }
        50% {
            opacity: 0.5;
        }
        100% {
            transform: translateY(-100vh) translateX(100px);
            opacity: 0;
        }
    }
    
    /* Utility classes */
    .animate-fade-in-down {
        animation: fadeInDown 1s ease-out;
    }
    
    .animate-fade-in-up {
        animation: fadeInUp 1s ease-out 0.3s forwards;
        opacity: 0;
    }
    
    /* Button card styles */
    .btn-card {
        background-color: rgb(75, 85, 99); /* bg-gray-600 */
        color: white;
        border-radius: 0.75rem; /* rounded-xl */
        padding: 1.5rem; /* p-6 */
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05); /* shadow-lg */
        transition: all 0.3s ease-in-out; /* transition-all duration-300 ease-in-out */
        transform: translateY(0) scale(1); /* starting state for transform */
        min-height: 200px;
        min-width: 320px;
    }
    
    .btn-card:hover {
        background-color: rgb(55, 65, 81); /* hover:bg-gray-700 */
        transform: translateY(-0.5rem) scale(1); /* hover:-translate-y-2 */
    }
    
    .icon-wrapper {
        background-color: rgb(55, 65, 81); /* bg-gray-700 */
        border-radius: 9999px; /* rounded-full */
        padding: 1.25rem; /* p-5 */
        margin-bottom: 0.75rem; /* mb-3 */
        transition: all 0.3s ease-in-out; /* transition-all duration-300 ease-in-out */
    }
    
    .btn-card:hover .icon-wrapper {
        background-color: rgb(31, 41, 55); /* bg-gray-800 */
    }
    
    /* Generate dynamic particle animations */
    @for (int i = 1; i <= 20; i++)
    {
        var delay = i * 2;
        var duration = 15 + (i % 10);
        
        <text>
        .particle-@(i-1) {
            animation: particleAnimation @(duration)s linear @(delay)s infinite;
        }
        </text>
    }

    .custom-dashboard-grid {
        display: grid;
        grid-template-columns: repeat(6, 1fr);
        grid-template-rows: auto auto;
        gap: 1.5rem;
        width: 100%;
        overflow-x: hidden;
    }
    .custom-dashboard-grid > *:nth-child(1) { grid-row: 1; grid-column: 1 / span 2; }
    .custom-dashboard-grid > *:nth-child(2) { grid-row: 1; grid-column: 3 / span 2; }
    .custom-dashboard-grid > *:nth-child(3) { grid-row: 1; grid-column: 5 / span 2; }
    .custom-dashboard-grid > *:nth-child(4) { grid-row: 2; grid-column: 2 / span 2; }
    .custom-dashboard-grid > *:nth-child(5) { grid-row: 2; grid-column: 4 / span 2; }

    @@media (max-width: 900px) {
        .custom-dashboard-grid {
            grid-template-columns: 1fr;
            grid-template-rows: none;
        }
        .custom-dashboard-grid > * {
            grid-column: auto !important;
            grid-row: auto !important;
            justify-self: stretch !important;
        }
    }
</style>

@code {
    // Generate random styles for particles
    private string GetRandomParticleStyle()
    {
        var random = new Random();
        var size = random.Next(5, 30); // px
        var left = random.Next(0, 100); // %
        var opacity = random.Next(10, 30) / 100.0; // 0.1 - 0.3
        
        return $"width: {size}px; height: {size}px; left: {left}%; opacity: {opacity};";
    }
}